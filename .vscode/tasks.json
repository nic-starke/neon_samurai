{
	"version": "2.0.0",
	
	
	"inputs": [
		{
			"id": "cross_file",
			"type": "command",
			"command": "cpptools.activeConfigCustomVariable",
			"args": "cross_file",
		},
		{
			"id": "platform",
			"type": "command",
			"command": "cpptools.activeConfigCustomVariable",
			"args": "platform",
		},
		{
			"id": "build_type",
			"type": "pickString",
			"description": "Select the build type",
			"default": "Release",
			"options": [
				"Debug",
				"Release"
			]
		}
	],


	"tasks": [
		{
			"label": "CMake Configure",
			"detail": "Generates the build-system ready for compilation",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-G",
				"Ninja",
				"-B",
				"${config:app.build_dir}/${input:platform}",
				"-DPLATFORM=${input:platform}",
				"--toolchain=${workspaceFolder}/cmake/platform/${input:platform}/toolchain.cmake",
				"-DCMAKE_BUILD_TYPE=${input:build_type}",
			],
			"problemMatcher": []
		},
		{
			"label": "Clean",
			"detail": "Clean the build folder",
			"type": "shell",
			"group": {
				"kind": "build"
			},
			"command" : "cmake",
			"options": {
				// "cwd": "${config:app.build_dir}/${input:platform}",
				"env": {}
			},
			"args": [
				"--build",
				"${config:app.build_dir}/${input:platform}",
				"--target",
				"clean"
			]
		},
		{
			"label": "Build (clean)",
			"detail": "Builds the project, cleans first",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"Clean"
			],
			"command" : "cmake",
			"options": {
				// "cwd": "${config:app.build_dir}/${input:platform}",
			},
			"args": [
				"--build",
				"${config:app.build_dir}/${input:platform}",
			],
			"presentation": {
				"echo": true,
				"showReuseMessage": false,
				"reveal": "always",
				"revealProblems": "never",
				"panel": "dedicated",
				"focus": true,
				"clear": true,
				"close": false
			},
			"problemMatcher": ["$gcc"]
		},
		// {
		// 	"label": "Size",
		// 	"detail": "Displays size (mem usage) of binary",
		// 	"type": "shell",
		// 	"group": {
		// 		"kind": "build"
		// 	},
		// 	"linux": {
		// 		"command": "ninja"
		// 	},
		// 	"options": {
		// 		"cwd": "${config:app.build_dir}",
		// 		"env": {}
		// 	},
		// 	"args": [
		// 		"BinSize"
		// 	]
		// },
		{
			"label": "Flash Board",
			"detail": "Programs the board with a built binary",
			"type": "shell",
			"group": {
				"kind": "build"
			},
			"dependsOn": "Build (clean)",
			"linux": {
				"command": "avrdude"
			},
			"args": [
				"-v",
				"-c",
				 "jtag3pdi", // Changed programmer to jtag3pdi
				// "avrispmkII",
				"-p",
				"x128a4u",
				"-P",
				"usb",
				"-U",
				"flash:w:\"${config:app.build_dir}/${input:platform}/neosam.hex\":a"
			]
		}
	],
}